# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = crlf

[*.cs]
charset = utf-8-bom
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[{Settings.Designer.cs,AssemblyInfo.cs,*.designer.cs,*.Designer.cs,Reference.cs}]
trim_trailing_whitespace = false
insert_final_newline = false

[*.md,*.markdown]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.js,*.json,*.html,*.scss,*.css,*.xml,*.config]
indent_style = space
indent_size = 2
